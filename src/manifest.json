{
  "name": "__MSG_Name__",
  "description": "__MSG_Description__",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "/js/background.js"
  },
  "permissions": ["activeTab", "contextMenus"],
  "host_permissions": ["https://picrew.me/*"],
  "content_scripts": [
    {
      "matches": ["https://picrew.me/image_maker/*"],
      "run_at":"document_end",
      "js": ["js/shortcut.js", "js/idb-keyval.min.js","js/content.js"],
      "css": ["css/style.css"]
    }
  ],
  "web_accessible_resources": [{
    "resources": ["js/embed.js"],
    "matches": ["https://picrew.me/*"]
  }],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en"
}
